@model Domain.Enitity.AccountViewsModel.RegisterViewModel;

@{
    Layout = null;
    ViewBag.Title = "Регистрация";
}

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        text-align: center;
    }

    h2 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    label {
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"] {
        padding: 8px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .submit {
        padding: 8px 16px;
        background-color: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
    }

        .submit:hover {
            background-color: #45a049;
        }
</style>

<div class="container">
    <h2>Добро пожаловать!</h2>
    <form asp-controller="Account" asp-action="Login">
        <div>
            <label for="Login">Логин:</label>
        </div>
        <div>
            <input asp-for="Login" type="text" placeholder="" autocomplete="off">
        </div>
        <div>
            <label for="Password">Пароль:</label>
        </div>
        <div>
            <input asp-for="Password" type="password" placeholder="" autocomplete="off">
        </div>

        <button class="submit" type="submit">Войти</button>
    </form>
</div>
